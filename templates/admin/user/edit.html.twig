{% extends 'base_menu.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_user') }}" class="btn btn-primary m-2">back to list</a>
    <div class="container">
        <h1>Edit User</h1>
        {{ form_start(form, {'attr': {'class': 'mb-2'}}) }}
            {{ form_row(form.email) }}
            {{ form_row(form.password, {'label': 'New password'}) }}
            {{ form_row(form.roles) }}
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
        {{ include('admin/user/_delete_form.html.twig') }}
    </div>
{% endblock %}
