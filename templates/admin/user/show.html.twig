{% extends 'base_menu.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_user') }}" class="btn btn-primary m-2">back to list</a>
    <div class="container">
        <h1>User</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password (hashed)</th>
                    <td>{{ user.password }}</td>
                </tr>
            </tbody>
        </table>
        <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-dark mb-2">edit</a>
        {{ include('admin/user/_delete_form.html.twig') }}
    </div>
{% endblock %}
