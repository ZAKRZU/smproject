{% extends 'base_menu.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="container">
        <h1>User list</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    {# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
                    <td>{% for role in user.roles %}{{ role }} {% endfor %}</td>
                    <td>
                        <a href="{{ path('app_admin_user_show', {'id': user.id}) }}" class="btn btn-light">show</a>
                        <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-dark">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_admin_user_new') }}" class="btn btn-success">Create new</a>
    </div>
{% endblock %}

